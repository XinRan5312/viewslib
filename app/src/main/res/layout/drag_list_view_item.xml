<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/edit_photo_filter_manage_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/edit_photo_filter_manage_filtername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#252525"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/edit_photo_filter_manage_icon"
        android:focusable="false"/>
    <TextView
        android:id="@+id/edit_photo_filter_manage_filterdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:textSize="14sp"
        android:textColor="#999999"
        android:text="nice滤镜的描述"
        android:layout_toRightOf="@+id/edit_photo_filter_manage_icon"
        android:layout_alignLeft="@+id/edit_photo_filter_manage_filtername"
        android:focusable="false"/>

    <CheckBox
        android:id="@+id/edit_photo_filter_manage_ck"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/editor_photo_filter_ck_selector"
        android:button="@null"
        android:focusable="false"/>


</RelativeLayout>